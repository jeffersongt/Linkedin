generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  password   String
  username   String?
  role       Role         @default(USER)
  createdAt  DateTime     @default(now())
  profile    Profile[]
  competence Competence[]
  experience Experience[]
  employee   Employee[]
}

model Profile {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  fst_name  String
  last_name String
  city      String
  position  String
  company   String
  createdAt DateTime @default(now())
}

model Competence {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String
  createdAt DateTime @default(now())
}

model Experience {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  company   String
  position  String
  city      String
  createdAt DateTime @default(now())
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  domain    String
  adress    String
  createdAt DateTime @default(now())
}

model Employee {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  companyId String
  createdAt DateTime @default(now())
}
